pipeline {
    agent any

    stages {
        // Stage 1: Setup virtual environment and install dependencies
        stage('Setup') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r Jenkins_basic/requirements.txt
                '''
            }
        }

        // Stage 2: Run tests
        stage('Test') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest
                '''
            }
        }

        // Stage 3: Deployment - manual approval before deployment
        stage('Deployment') {
            steps {
                script {
                    // Manual input step for deployment approval
                    def approver = input(
                        message: 'Proceed with deployment?',
                        ok: 'Deploy'
                    )
                    echo "âœ… Deployment approved by: ${approver}"
                    
                    // Your deployment script or commands go here
                    // For example, sh './deploy.sh'
                    echo "ðŸš€ Deploying application..."
                }
            }
        }
    }
}
