pipeline {
    agent any
    environment{
        USERNAME = "Ajinkya"
    }

    stages {
        stage("Checkout") {
            steps {
                echo "Running on ${env.JOB_NAME}"
                echo "username is : ${USERNAME}"
                git url: 'https://github.com/ajinkyap738/Jenkins.git', branch: 'ajinkya'
                sh 'ls -lart'
            }
        }

        stage('Setup') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r Jenkins_basic/requirements.txt
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest
                '''
            }
        }
    }
}
