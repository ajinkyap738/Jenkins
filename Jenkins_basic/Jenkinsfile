pipeline {
    agent any

    stages {


        stage('Setup') {
            steps {

                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r Jenkins_basic/requirements.txt
                '''            


            }
       }
        stage('Test') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest
                '''
                
            }
        }    

        stage('Deployment') {


        def approver = input(
        id: 'DeployInput', message: 'Proceed with deployment?', ok: 'Deploy',
        parameters: [],
        submitter: 'admin,teamlead'
        )


        } 
        
            
    }
}
